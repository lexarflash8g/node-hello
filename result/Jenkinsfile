pipeline {
    agent any
    
    tools {
        nodejs 'node'
    }
    stages{
        stage('build'){
            when{
                 branch 'master'
                 changeset "**/result/**"
            }
            steps{
                echo "compiling worker app"
                dir('worker'){
                    sh 'npm install'
                   
                }
                }
            }
        
         stage('test'){
            when{
                 branch 'master'
                 changeset "**/rseult/**"
            }
            steps{
               echo "running unit tests" 
               dir('worker'){
                    sh 'npm install'
                    sh 'npm test'

                }
            }
        }
                
    }
}
        
